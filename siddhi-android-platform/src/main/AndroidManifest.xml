                android:enabled="true"
                android:exported="true">
            <intent-filter>
                <action android:name="io.siddhiappservice.AIDL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
    </application>
</manifest>
